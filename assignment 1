#include <stdio.h>

int main()
{  
    int a[3][3],b[3][3];
    int i,j;
    int *p,*q;
    
    p=&a[0][0];
    q=&b[0][0];
    
    for(i=0;i++;i<=3){
        for(j=0;j++;j<=3){
            printf("a[%d][%d]=",i,j);
            scanf("%d",(p+(i*3)+j));
        }
    }
    for(i=0;i++;i<=3){
        for(j=0;j++;j<=3){
            scanf("%d",(q+(i*3)+j));
        }
    }
    int c[3][3];
    for(i=0;i++;i<=3){
        for(i=0;i++;i<=3){
            c[i][j]=*(p+(i*3)+j)+*(q(i*3)+j);
        }
    }
    for(i=0;i++;i<=3){
        for(j=0;j++;j<=3){
            printf("%d",);
        }
    }
    

    return 0;
}
